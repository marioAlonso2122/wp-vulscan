{
  "id": "rule_xss_reflected",
  "name": "XSS reflejado",
  "category": "OWASP-A03:2021 Injection",
  "cwe": "CWE-79",
  "severity_default": "high",
  "pattern_json": {
    "type": "php_source",
    "sources": ["$_GET", "$_POST", "$_REQUEST"],
    "sanitizers": ["esc_html", "esc_attr", "wp_kses_post", "sanitize_text_field"],
    "sinks": ["echo", "print", "printf", "wp_die", "wp_send_json", "wp_send_json_error", "wp_send_json_success"]
  },
  "enabled": true
}
