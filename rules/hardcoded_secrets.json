{
  "id": "rule_hardcoded_secrets",
  "name": "Secretos/API keys embebidos en c√≥digo",
  "category": "OWASP-A04:2021 Insecure Design",
  "cwe": "CWE-798",
  "severity_default": "high",
  "pattern_json": {
    "type": "regex_scan",
    "patterns": [
      "AKIA[0-9A-Z]{16}",
      "AIza[0-9A-Za-z\\-_]{35}",
      "sk_live_[0-9a-zA-Z]{24,}",
